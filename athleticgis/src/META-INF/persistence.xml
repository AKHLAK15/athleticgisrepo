<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
        version="2.0">
	<persistence-unit name="com.athleticgis.jpa" transaction-type="RESOURCE_LOCAL">
		<description>
            Persistence unit for athleticgis
        </description>
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>com.athleticgis.domain.user.UserRole</class>
        <class>com.athleticgis.domain.activity.ActivityPoint</class>
        <class>com.athleticgis.domain.activity.Activity</class>
        <class>com.athleticgis.domain.user.User</class>
        <class>com.athleticgis.domain.user.UserPreferences</class>
        <class>com.athleticgis.domain.activity.MyMap</class>
        <class>com.athleticgis.domain.activity.MyMapMarker</class>
        
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/athleticgis" />
            <property name="javax.persistence.jdbc.user" value="athleticgis" />
            <property name="javax.persistence.jdbc.password" value="ripple93" />
 
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.hbm2ddl.auto" value="update" />
        </properties>
	</persistence-unit>
</persistence>
